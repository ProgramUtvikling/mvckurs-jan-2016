@using ImdbWeb.HtmlHelpers
@{ 
	ViewBag.Title = $"Details for {Model.Title}";
}
@model Movie
<h2>@Model.Title (@Model.ProductionYear)</h2>
<p>@Model.OriginalTitle</p>

<dl>
	<dt>Productionyear</dt>
	<dd>@Model.ProductionYear</dd>
	<dt>Running Length</dt>
	<dd>@Model.RunningLength</dd>
	<dt>Producers</dt>
	<dd>@Html.PrettyJoin(Model.Producers)</dd>
	<dt>Directors</dt>
	<dd>@Html.PrettyJoin(Model.Directors)</dd>
</dl>


<h3>Actors</h3>
@Html.Partial("_PersonList", Model.Actors)

