@using ImdbWeb.HtmlHelpers

@model Movie
<h2>@Model.Title (@Model.ProductionYear)</h2>
<p>@Model.OriginalTitle</p>

<dl>
	<dt>Productionyear</dt>
	<dd>@Model.ProductionYear</dd>
	<dt>Running Length</dt>
	<dd>@Model.RunningLength</dd>
	@*<dt>Producers</dt>
	<dd>@Html.PrettyJoin(Model.Producers)</dd>
	<dt>Directors</dt>
	<dd>@Html.PrettyJoin(Model.Directors)</dd>*@
</dl>


<h3>Actors</h3>
<ul>
	@foreach (var person in Model.Actors)
	{
		<li>
			<a asp-controller="Person" asp-action="Details" asp-route-id="@person.PersonId">
				@person.Name
			</a>
		</li>
	}
</ul>

<h3>Producers</h3>
<ul>
	@foreach (var person in Model.Producers)
	{
		<li>
			<a asp-controller="Person" asp-action="Details" asp-route-id="@person.PersonId">
				@person.Name
			</a>
		</li>
	}
</ul>

<h3>Directors</h3>
<ul>
	@foreach (var person in Model.Directors)
	{
		<li>
			<a asp-controller="Person" asp-action="Details" asp-route-id="@person.PersonId">
				@person.Name
			</a>
		</li>
	}
</ul>
