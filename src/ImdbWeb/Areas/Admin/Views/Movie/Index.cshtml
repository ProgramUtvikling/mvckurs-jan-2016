@model IEnumerable<IndexModel>
<h2>Admin filmer</h2>

<a asp-action="Create">Register new movie</a>

<table>
	<thead>
		<tr>
			<td>Title</td>
			<td>Running Length</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		@foreach (var movie in Model)
		{
			<tr>
				<td>
					@movie.Title
				</td>
				<td>
					@movie.RunningLength
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
					<a asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>